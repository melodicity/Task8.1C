<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/secondary70"
                android:endColor="@color/secondary70"
                android:angle="90"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/secondary70"
                android:endColor="@color/secondary80"
                android:angle="90"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>
